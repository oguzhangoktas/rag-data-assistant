# =============================================================================
# RAG Data Assistant - Environment Configuration
# Author: Oguzhan Goktas (oguzhangoktas22@gmail.com)
# =============================================================================

# -----------------------------------------------------------------------------
# LLM API Keys (Required - Get your keys from the respective providers)
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# -----------------------------------------------------------------------------
# LLM Configuration
# -----------------------------------------------------------------------------
LLM_PRIMARY_PROVIDER=openai
LLM_FALLBACK_PROVIDER=anthropic
LLM_MODEL_NAME=gpt-4-turbo-preview
LLM_FALLBACK_MODEL=claude-3-sonnet-20240229
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=2048
LLM_TIMEOUT_SECONDS=30

# -----------------------------------------------------------------------------
# Embedding Configuration
# -----------------------------------------------------------------------------
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536
EMBEDDING_BATCH_SIZE=100

# -----------------------------------------------------------------------------
# Vector Store Configuration (ChromaDB)
# -----------------------------------------------------------------------------
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION_NAME=documentation
CHROMA_PERSIST_DIRECTORY=./chroma_data

# -----------------------------------------------------------------------------
# PostgreSQL Database Configuration
# -----------------------------------------------------------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=dataassistant
POSTGRES_USER=assistant
POSTGRES_PASSWORD=your-secure-password-here

# Database URL (constructed from above)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# -----------------------------------------------------------------------------
# Redis Configuration (Caching & Rate Limiting)
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8080
API_DEBUG=false
API_WORKERS=4
API_RELOAD=false

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600

# -----------------------------------------------------------------------------
# RAG Configuration
# -----------------------------------------------------------------------------
RAG_CHUNK_SIZE=512
RAG_CHUNK_OVERLAP=50
RAG_TOP_K_RESULTS=5
RAG_SIMILARITY_THRESHOLD=0.7
RAG_RERANK_ENABLED=true

# -----------------------------------------------------------------------------
# SQL Generation Configuration
# -----------------------------------------------------------------------------
SQL_MAX_ROWS=1000
SQL_TIMEOUT_SECONDS=30
SQL_ALLOW_WRITE_OPERATIONS=false
SQL_FEW_SHOT_EXAMPLES=5

# -----------------------------------------------------------------------------
# Monitoring Configuration
# -----------------------------------------------------------------------------
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
LOG_LEVEL=INFO
LOG_FORMAT=json

# Sentry (Optional - Error Tracking)
SENTRY_DSN=

# -----------------------------------------------------------------------------
# Cache Configuration
# -----------------------------------------------------------------------------
CACHE_TTL_SECONDS=3600
SEMANTIC_CACHE_ENABLED=true
SEMANTIC_CACHE_THRESHOLD=0.95
EMBEDDING_CACHE_ENABLED=true

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
SECRET_KEY=your-secret-key-for-jwt-here
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8501
CORS_ENABLED=true

# -----------------------------------------------------------------------------
# Demo/Development Settings
# -----------------------------------------------------------------------------
DEMO_MODE=false
SAMPLE_DATA_ENABLED=true
